<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.datepicker.test.testapp.ThirdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextWeb"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="phone"
        android:text="" />

        <ImageButton
        android:id="@+id/imageButtonPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/icono_tlf" />

        <EditText
        android:id="@+id/editTextWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:inputType="textWebEditText"
        android:text="" />

        <ImageButton
        android:id="@+id/imageButtonWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextWeb"
        android:layout_alignStart="@+id/imageButtonPhone"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/icono_web" />

        <TextView
        android:id="@+id/textViewPhoneContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/imageButtonPhoneContacts"
        android:text="Ver contactos" />

        <ImageButton
        android:id="@+id/imageButtonPhoneContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextWeb"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        app:srcCompat="@mipmap/icono_contacto" />

        <TextView
        android:id="@+id/textViewMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewPhoneContacts"
        android:layout_below="@+id/imageButtonPhoneContacts"
        android:layout_marginTop="70dp"
        android:text="Ver corrreo" />

        <ImageButton
        android:id="@+id/imageButtonMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButtonPhoneContacts"
        android:background="@android:color/transparent"
        android:layout_below="@+id/imageButtonPhoneContacts"
        android:layout_marginTop="43dp"
        app:srcCompat="@mipmap/icono_correo" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButtonCamera"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_camera" />


</RelativeLayout>